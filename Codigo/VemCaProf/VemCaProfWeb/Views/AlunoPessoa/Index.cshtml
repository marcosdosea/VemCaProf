@model IEnumerable<VemCaProfWeb.Models.AlunoPessoaModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Alunos</h1>

<p>
    @Html.ActionLink("Criar Novo Aluno", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Cpf)</th>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <th>Menor?</th>
        <th>Atípico?</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome) @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Cpf)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            
            <td>@(item.AlunoDeMenor ? "Sim" : "Não")</td>
            <td>@(item.Atipico ? "Sim" : "Não")</td>
            
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn btn-sm btn-warning" }) 
                @Html.ActionLink("Detalhes", "Details", new { id=item.Id }, new { @class = "btn btn-sm btn-info" }) 
                @Html.ActionLink("Excluir", "Delete", new { id=item.Id }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }
    </tbody>
</table>