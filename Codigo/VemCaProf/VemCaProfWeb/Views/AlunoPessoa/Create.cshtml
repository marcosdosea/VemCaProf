@model VemCaProfWeb.Models.AlunoPessoaModel

@{
    ViewData["Title"] = "Cadastrar Aluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Cadastrar Aluno</h1>
    <h4>Finalize seu perfil de estudante</h4>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="IdUsuario" />

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-primary text-white">Dados Pessoais</div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Sobrenome" class="control-label"></label>
                            <input asp-for="Sobrenome" class="form-control" />
                            <span asp-validation-for="Sobrenome" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Cpf" class="control-label"></label>
                            <input asp-for="Cpf" class="form-control" placeholder="000.000.000-00" />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="DataNascimento" class="control-label"></label>
                            <input asp-for="DataNascimento" class="form-control" type="date" />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Genero" class="control-label"></label>
                            <input asp-for="Genero" class="form-control" />
                            <span asp-validation-for="Genero" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-dark text-white">Contato</div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" type="email" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                 <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-success text-white">Vínculo e Condições</div>
                    <div class="card-body">
                        
                        <div class="form-group mb-3">
                            <label asp-for="IdResponsavel" class="control-label fw-bold"></label>
                            <select asp-for="IdResponsavel" class="form-control" asp-items="ViewBag.ListaResponsaveis">
                                <option value="">-- Selecione o Responsável (Opcional) --</option>
                            </select>
                            <span asp-validation-for="IdResponsavel" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="form-check mb-2">
                            <input class="form-check-input" asp-for="AlunoDeMenor" />
                            <label class="form-check-label" asp-for="AlunoDeMenor">
                                @Html.DisplayNameFor(model => model.AlunoDeMenor)
                            </label>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Atipico" />
                            <label class="form-check-label" asp-for="Atipico">
                                @Html.DisplayNameFor(model => model.Atipico)
                            </label>
                        </div>

                        <div class="alert alert-info py-2 mt-3">
                            <small><i class="bi bi-info-circle"></i> Alunos menores de idade devem obrigatoriamente possuir um responsável vinculado.</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                 <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-light">Endereço Residencial</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 form-group mb-3">
                                <label asp-for="Cep" class="control-label"></label>
                                <input asp-for="Cep" class="form-control" />
                                <span asp-validation-for="Cep" class="text-danger"></span>
                            </div>
                             <div class="col-md-6 form-group mb-3">
                                <label asp-for="Rua" class="control-label"></label>
                                <input asp-for="Rua" class="form-control" />
                                <span asp-validation-for="Rua" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 form-group mb-3">
                                <label asp-for="Numero" class="control-label"></label>
                                <input asp-for="Numero" class="form-control" />
                                <span asp-validation-for="Numero" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 form-group mb-3">
                                <label asp-for="Bairro" class="control-label"></label>
                                <input asp-for="Bairro" class="form-control" />
                            </div>
                             <div class="col-md-4 form-group mb-3">
                                <label asp-for="Cidade" class="control-label"></label>
                                <input asp-for="Cidade" class="form-control" />
                            </div>
                             <div class="col-md-2 form-group mb-3">
                                <label asp-for="Estado" class="control-label"></label>
                                <input asp-for="Estado" class="form-control" />
                            </div>
                             <div class="col-md-2 form-group mb-3">
                                <label asp-for="Complemento" class="control-label"></label>
                                <input asp-for="Complemento" class="form-control" />
                            </div>
                        </div>
                    </div>
                 </div>
            </div>
        </div>

        <div class="form-group mt-3 mb-5">
            <button type="submit" class="btn btn-primary btn-lg shadow-sm px-5">Finalizar Cadastro</button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}