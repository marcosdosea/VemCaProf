@model VemCaProfWeb.Models.AlunoPessoaModel

@{
    ViewData["Title"] = "Editar Aluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Editar Aluno</h1>
    <h4>@Model.Nome @Model.Sobrenome</h4>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="IdUsuario" />

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-primary text-white">Dados Básicos</div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Sobrenome" class="control-label"></label>
                            <input asp-for="Sobrenome" class="form-control" />
                            <span asp-validation-for="Sobrenome" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Cpf" class="control-label"></label>
                            <input asp-for="Cpf" class="form-control" readonly />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-3 border-info shadow-sm">
                    <div class="card-header bg-info text-white">Vínculo e Condições</div>
                    <div class="card-body">
                         <div class="form-group mb-3">
                            <label asp-for="IdResponsavel" class="control-label fw-bold"></label>
                            <select asp-for="IdResponsavel" class="form-control" asp-items="ViewBag.ListaResponsaveis">
                                <option value="">-- Selecione o Responsável --</option>
                            </select>
                            <span asp-validation-for="IdResponsavel" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-2">
                            <input class="form-check-input" asp-for="AlunoDeMenor" />
                            <label class="form-check-label" asp-for="AlunoDeMenor">
                                @Html.DisplayNameFor(model => model.AlunoDeMenor)
                            </label>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Atipico" />
                            <label class="form-check-label" asp-for="Atipico">
                                @Html.DisplayNameFor(model => model.Atipico)
                            </label>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-3 shadow-sm">
             <div class="card-header bg-light fw-bold">Endereço</div>
             <div class="card-body row">
                 <div class="col-md-3 mb-2">
                     <label asp-for="Cep" class="control-label"></label>
                     <input asp-for="Cep" class="form-control" />
                     <span asp-validation-for="Cep" class="text-danger"></span>
                 </div>
                 <div class="col-md-9 mb-2">
                     <label asp-for="Rua" class="control-label"></label>
                     <input asp-for="Rua" class="form-control" />
                     <span asp-validation-for="Rua" class="text-danger"></span>
                 </div>
                 <div class="col-md-2 mb-2">
                     <label asp-for="Numero" class="control-label"></label>
                     <input asp-for="Numero" class="form-control" />
                 </div>
                 <div class="col-md-4 mb-2">
                     <label asp-for="Bairro" class="control-label"></label>
                     <input asp-for="Bairro" class="form-control" />
                 </div>
                  <div class="col-md-4 mb-2">
                     <label asp-for="Cidade" class="control-label"></label>
                     <input asp-for="Cidade" class="form-control" />
                 </div>
                  <div class="col-md-2 mb-2">
                     <label asp-for="Estado" class="control-label"></label>
                     <input asp-for="Estado" class="form-control" />
                 </div>
             </div>
        </div>

        <div class="form-group mt-3 mb-5">
            <input type="submit" value="Salvar Alterações" class="btn btn-warning btn-lg px-5 shadow" />
            <a asp-action="Index" class="btn btn-secondary btn-lg px-5">Voltar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}