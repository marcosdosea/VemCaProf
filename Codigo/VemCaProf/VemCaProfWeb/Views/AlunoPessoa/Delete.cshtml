@model VemCaProfWeb.Models.AlunoPessoaModel

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja apagar este aluno?</h3>
<div>
    <h4>Dados do Aluno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome) @Html.DisplayFor(model => model.Sobrenome)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Cpf)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Cpf)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AlunoDeMenor)</dt>
        <dd class="col-sm-10">@(Model.AlunoDeMenor ? "Sim" : "Não")</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-actions no-color mt-3">
            <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" /> |
            @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>