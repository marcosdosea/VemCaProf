@model VemCaProfWeb.Models.AlunoPessoaModel

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Detalhes do Aluno</h1>

    <div>
        <hr />
        
        <div class="row">
            <div class="col-md-6">
                 <h5 class="text-primary">Dados Pessoais</h5>
                 <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome) @Html.DisplayFor(model => model.Sobrenome)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cpf)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cpf)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DataNascimento)</dt>
                    <dd class="col-sm-8">@Model.DataNascimento.ToShortDateString()</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Genero)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Genero)</dd>
                </dl>
                
                 <h5 class="text-primary mt-4">Contato</h5>
                 <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefone)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefone)</dd>

                    <dt class="col-sm-4 text-muted">ID Usuário</dt>
                    <dd class="col-sm-8 text-muted small">@Model.IdUsuario</dd>
                </dl>
            </div>

            <div class="col-md-6">
                 <h5 class="text-success">Vínculo e Condições</h5>
                 <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IdResponsavel)</dt>
                    <dd class="col-sm-8">
                        @(Model.IdResponsavel.HasValue ? Model.IdResponsavel.ToString() : "Não informado")
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AlunoDeMenor)</dt>
                    <dd class="col-sm-8">@(Model.AlunoDeMenor ? "Sim" : "Não")</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Atipico)</dt>
                    <dd class="col-sm-8">@(Model.Atipico ? "Sim" : "Não")</dd>
                </dl>
            </div>
        </div>

        <h5 class="text-primary mt-4">Endereço</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Logradouro</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rua), Nº @Html.DisplayFor(model => model.Numero)
                @if (!string.IsNullOrEmpty(Model.Complemento))
                {
                    <span> - @Html.DisplayFor(model => model.Complemento)</span>
                }
            </dd>
            
            <dt class="col-sm-2">Bairro</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Bairro)</dd>

            <dt class="col-sm-2">Localidade</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cidade) / @Html.DisplayFor(model => model.Estado) - CEP: @Html.DisplayFor(model => model.Cep)
            </dd>
        </dl>
    </div>

    <div class="mt-4 mb-5">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg px-4">Editar</a>
        <a asp-action="Index" class="btn btn-secondary btn-lg px-4">Voltar</a>
    </div>
</div>