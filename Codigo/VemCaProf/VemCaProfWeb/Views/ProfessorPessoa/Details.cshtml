@model VemCaProfWeb.Models.ProfessorPessoaModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do Professor</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome) @Html.DisplayFor(model => model.Sobrenome)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
                
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Libras)</dt>
                <dd class="col-sm-9">@(Model.Libras ? "Sim" : "Não")</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DescricaoProfessor)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DescricaoProfessor)</dd>
                
                <dt class="col-sm-3">Cidade de Atuação (ID)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdCidade)</dd>
            </dl>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary" })
</p>