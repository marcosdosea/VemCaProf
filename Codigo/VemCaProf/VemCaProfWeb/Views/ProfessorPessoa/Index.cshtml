@model IEnumerable<VemCaProfWeb.Models.ProfessorPessoaModel>

@{
    ViewData["Title"] = "Professores";
}

<h1>Professores</h1>

<p>
    @Html.ActionLink("Novo Professor", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <th>@Html.DisplayNameFor(model => model.Libras)</th>
        <th>@Html.DisplayNameFor(model => model.DescricaoProfessor)</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome) @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            
            <td>@(item.Libras ? "Sim" : "Não")</td>
            
            <td>
                @if(!string.IsNullOrEmpty(item.DescricaoProfessor) && item.DescricaoProfessor.Length > 50) 
                {
                    @item.DescricaoProfessor.Substring(0, 50) <text>...</text>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.DescricaoProfessor)
                }
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn btn-sm btn-warning" }) 
                @Html.ActionLink("Detalhes", "Details", new { id=item.Id }, new { @class = "btn btn-sm btn-info" }) 
                @Html.ActionLink("Excluir", "Delete", new { id=item.Id }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }
    </tbody>
</table>