@model IEnumerable<VemCaProfWeb.Models.ProfessorPessoaModel>

@{
    ViewData["Title"] = "Professores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Professores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Professor</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <th>@Html.DisplayNameFor(model => model.Libras)</th>
        <th>@Html.DisplayNameFor(model => model.DescricaoProfessor)</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome) @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            
            <td>@(item.Libras ? "Sim" : "Não")</td>
            
            <td>
                @if(!string.IsNullOrEmpty(item.DescricaoProfessor) && item.DescricaoProfessor.Length > 50) 
                {
                    <span>@item.DescricaoProfessor.Substring(0, 50)...</span>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.DescricaoProfessor)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>