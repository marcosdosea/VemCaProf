@model VemCaProfWeb.Models.ProfessorPessoaModel

@{
    ViewData["Title"] = "Cadastrar Professor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastrar Professor</h1>
<h4>Dados do Professor</h4>
<hr />

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">Dados Pessoais</div>
                <div class="card-body">
                    
                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Sobrenome" class="control-label"></label>
                        <input asp-for="Sobrenome" class="form-control" />
                        <span asp-validation-for="Sobrenome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Cpf" class="control-label"></label>
                        <input asp-for="Cpf" class="form-control" placeholder="000.000.000-00" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="DataNascimento" class="control-label"></label>
                        <input asp-for="DataNascimento" class="form-control" type="date" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Genero" class="control-label"></label>
                        <input asp-for="Genero" class="form-control" />
                        <span asp-validation-for="Genero" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
             <div class="card mb-3">
                <div class="card-header bg-success text-white">Profissional</div>
                <div class="card-body">
                    
                    <div class="form-group mb-3">
                        <label asp-for="IdCidade" class="control-label fw-bold"></label>
                        <select asp-for="IdCidade" class="form-control" asp-items="ViewBag.ListaDeCidades">
                            <option value="">-- Selecione a Cidade de Atuação --</option>
                        </select>
                        <span asp-validation-for="IdCidade" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DescricaoProfessor" class="control-label"></label>
                        <textarea asp-for="DescricaoProfessor" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="DescricaoProfessor" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mb-3">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Libras" /> @Html.DisplayNameFor(model => model.Libras)
                        </label>
                    </div>

                    <hr />
                    <h6>Documentação (Uploads)</h6>

                    <div class="form-group mb-3">
                        <label class="control-label">Foto de Perfil</label>
                        <input type="file" name="arquivoFoto" class="form-control" accept="image/*" />
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label">Diploma</label>
                        <input type="file" name="arquivoDiploma" class="form-control" accept=".pdf,image/*" />
                    </div>

                </div>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                     <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="form-control" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Senha" class="control-label"></label>
                        <input asp-for="Senha" class="form-control" type="password" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
             <div class="card mb-3">
                <div class="card-header">Endereço Residencial</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 form-group mb-3">
                            <label asp-for="Cep" class="control-label"></label>
                            <input asp-for="Cep" class="form-control" />
                            <span asp-validation-for="Cep" class="text-danger"></span>
                        </div>
                         <div class="col-md-5 form-group mb-3">
                            <label asp-for="Rua" class="control-label"></label>
                            <input asp-for="Rua" class="form-control" />
                            <span asp-validation-for="Rua" class="text-danger"></span>
                        </div>
                        <div class="col-md-2 form-group mb-3">
                            <label asp-for="Numero" class="control-label"></label>
                            <input asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                         <div class="col-md-2 form-group mb-3">
                            <label asp-for="Estado" class="control-label"></label>
                            <input asp-for="Estado" class="form-control" />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                         <div class="col-md-4 form-group mb-3">
                            <label asp-for="Bairro" class="control-label"></label>
                            <input asp-for="Bairro" class="form-control" />
                            <span asp-validation-for="Bairro" class="text-danger"></span>
                        </div>
                         <div class="col-md-4 form-group mb-3">
                            <label asp-for="Cidade" class="control-label"></label>
                            <input asp-for="Cidade" class="form-control" />
                            <span asp-validation-for="Cidade" class="text-danger"></span>
                        </div>
                         <div class="col-md-4 form-group mb-3">
                            <label asp-for="Complemento" class="control-label"></label>
                            <input asp-for="Complemento" class="form-control" />
                            <span asp-validation-for="Complemento" class="text-danger"></span>
                        </div>
                    </div>
                </div>
             </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Salvar Professor" class="btn btn-primary btn-lg" />
        <a asp-action="Index" class="btn btn-secondary btn-lg">Voltar para Lista</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}