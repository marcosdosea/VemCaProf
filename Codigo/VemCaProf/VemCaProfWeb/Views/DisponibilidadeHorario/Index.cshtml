@model IEnumerable<VemCaProfWeb.Models.DisponibilidadeHorarioModel>

@{
    ViewData["Title"] = "Horário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Horário</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Horário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorarioInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorarioFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProfessor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dia)
            </td>
             <td>
                    @Html.DisplayFor(modelItem => item.HorarioInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HorarioFim)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProfessor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
