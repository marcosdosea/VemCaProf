@model VemCaProfWeb.Models.ResponsavelPessoaModel

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Detalhes do Responsável</h1>

    <div>
        <hr />
        
        <div class="row">
            <div class="col-md-6">
                <h5 class="text-primary mt-4"><i class="bi bi-person"></i> Dados Pessoais</h5>
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome) @Html.DisplayFor(model => model.Sobrenome)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cpf)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cpf)</dd>

                    <dt class="col-sm-4">Nascimento</dt>
                    <dd class="col-sm-8">@Model.DataNascimento.ToShortDateString()</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Genero)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Genero)</dd>
                </dl>
            </div>

            <div class="col-md-6">
                <h5 class="text-primary mt-4"><i class="bi bi-people"></i> Contato e Dependentes</h5>
                <dl class="row">
                    <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-5">@Html.DisplayNameFor(model => model.Telefone)</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Telefone)</dd>

                    <dt class="col-sm-5">Dependentes</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.QuantidadeDeDependentes)</dd>
                    
                    <dt class="col-sm-5 text-muted small">ID Autenticação</dt>
                    <dd class="col-sm-7 text-muted small">@Model.IdUsuario</dd>
                </dl>
            </div>
        </div>

        <h5 class="text-primary mt-4"><i class="bi bi-geo-alt"></i> Endereço</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Logradouro</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rua), Nº @Html.DisplayFor(model => model.Numero)
                @if (!string.IsNullOrEmpty(Model.Complemento))
                {
                    <span> - @Html.DisplayFor(model => model.Complemento)</span>
                }
            </dd>

            <dt class="col-sm-2">Bairro</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Bairro)</dd>

            <dt class="col-sm-2">Localidade</dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cidade) - @Html.DisplayFor(model => model.Estado)
            </dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Cep)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Cep)</dd>
        </dl>
    </div>

    <div class="mt-4 mb-5">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg px-4 shadow-sm">Editar</a>
        <a asp-action="Index" class="btn btn-secondary btn-lg px-4 ms-2">Voltar</a>
    </div>
</div>