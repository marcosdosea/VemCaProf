@model VemCaProfWeb.Models.DisciplinaModel

@{
    ViewData["Title"] = "Excluir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir esta disciplina?</h3>
<div class="alert alert-danger">
    Esta ação não pode ser desfeita.
</div>

<div>
    <h4>Dados da Disciplina</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nivel)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nivel)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger btn-lg" /> |
        <a asp-action="Index" class="btn btn-secondary btn-lg">Voltar para Lista</a>
    </form>
</div>