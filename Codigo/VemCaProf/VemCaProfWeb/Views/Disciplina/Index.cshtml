@model IEnumerable<VemCaProfWeb.Models.DisciplinaModel>

@{
    ViewData["Title"] = "Disciplinas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Disciplinas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Disciplina</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>Nível de Ensino</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            string textoNivel = item.Nivel switch
            {
                "F1" => "Fundamental Menor",
                "F2" => "Fundamental Maior",
                "M1" => "Ensino Médio",
                _ => item.Nivel
            };

            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>

                <td>@textoNivel</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>