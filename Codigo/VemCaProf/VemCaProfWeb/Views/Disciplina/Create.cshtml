@model VemCaProfWeb.Models.DisciplinaModel

@{
    ViewData["Title"] = "Cadastrar Disciplina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastrar Disciplina</h1>
<h4>Nova Disciplina</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card mb-3">
                <div class="card-header bg-primary text-white">Informações</div>
                <div class="card-body">
                    
                    <div class="form-group mb-3">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Ex: Matemática, Português..." />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Descricao" class="control-label"></label>
                        <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Nivel" class="control-label"></label>
                        <input asp-for="Nivel" class="form-control" placeholder="Ex: F1,F2,M1" />
                        <span asp-validation-for="Nivel" class="text-danger"></span>
                    </div>

                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary btn-lg" />
                <a asp-action="Index" class="btn btn-secondary btn-lg">Voltar para Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}