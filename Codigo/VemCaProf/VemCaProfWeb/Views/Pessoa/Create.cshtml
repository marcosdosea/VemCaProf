@model VemCaProfWeb.Models.PessoaModel

@{
    ViewData["Title"] = "Novo Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // Título dinâmico 
    string tituloPerfil = Model.TipoPessoa == "P" ? "Professor" : 
        (Model.TipoPessoa == "A" ? "Aluno" : "Responsável");
}

<h1>Completar Cadastro</h1>
<h4>@tituloPerfil</h4>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="TipoPessoa" />
            
            <partial name="_DadosPessoais" model="Model" />

            @if (Model.TipoPessoa == "P")
            {
                <div class="mt-3">
                    <partial name="_ProfessorCampos" model="Model" />
                </div>
            }
            else if (Model.TipoPessoa == "A")
            {
                <div class="mt-3">
                    <partial name="_AlunoCampos" model="Model" />
                </div>
            }
            else if (Model.TipoPessoa == "R")
            {
                <div class="mt-3">
                    <partial name="_ResponsavelCampos" model="Model" />
                </div>
            }

            <div class="form-group mt-3 mb-5">
                <input type="submit" value="Finalizar Cadastro" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}