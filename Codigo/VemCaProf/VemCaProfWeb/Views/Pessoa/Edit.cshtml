@model VemCaProfWeb.Models.PessoaModel

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Perfil</h1>
<h4>Alterar informações</h4>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TipoPessoa" />
            <input type="hidden" asp-for="Cpf" /> 

            <partial name="_DadosPessoais" model="Model" />

            @if (Model.TipoPessoa == "P")
            {
                <div class="mt-3">
                    <partial name="_ProfessorCampos" model="Model" />
                </div>
            }
            else if (Model.TipoPessoa == "A")
            {
                <div class="mt-3">
                    <partial name="_AlunoCampos" model="Model" />
                </div>
            }
            else if (Model.TipoPessoa == "R")
            {
                <div class="mt-3">
                    <partial name="_ResponsavelCampos" model="Model" />
                </div>
            }

            <div class="form-group mt-3 mb-5">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}