@model IEnumerable<Core.DTO.AulaDTO>
@using VemCaProfWeb.Helpers
@using Core.Enums

@{
    ViewData["Title"] = "Pagamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Pagamentos</h4>
        </div>

        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.First().Id)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Descricao)</th>
                        <th>Data/Hora Pagamento</th>
                        <th>@Html.DisplayNameFor(m => m.First().Valor)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Status)</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Descricao</td>

                            <td>
                                @if (item.Status == StatusEnum.Paga)
                                {
                                    <span class="badge bg-success">
                                        @item.DataHoraPagamento.ToString("dd/MM/yyyy HH:mm")
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">
                                        Pendente
                                    </span>
                                }
                            </td>

                            <td>R$ @item.Valor</td>

                            <td>
                                @PagamentoDisplayHelper.StatusLabel(item.Status)
                            </td>

                            <td class="text-center">
                                <a asp-action="Details"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-info">
                                    Detalhes
                                </a>

                                @if (item.Status != StatusEnum.Paga)
                                {
                                    <a asp-action="Create"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-success ms-1">
                                        Pagar
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
