@model VemCaProfWeb.Models.PagamentoModel

@{
    ViewData["Title"] = "Realizar Pagamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Realizar Pagamento</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="IdAula" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Aula</label>
                    <input class="form-control" value="@Model.DescricaoAula" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Valor</label>
                    <input class="form-control" value="@Model.Valor" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="MetodoPagamento" class="form-label fw-bold"></label>
                    <select asp-for="MetodoPagamento"
                            class="form-select"
                            asp-items="ViewBag.Metodos">
                    </select>
                    <span asp-validation-for="MetodoPagamento" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Voltar
                    </a>
                    <button type="submit" class="btn btn-success">
                        Confirmar Pagamento
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
