@model IEnumerable<VemCaProfWeb.Models.AulaModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cidade.css" />
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataHorarioInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHorarioFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraPagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetodoPagamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdDisciplina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdResponsavel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProfessor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHorarioInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHorarioFinal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Local)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHoraPagamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetodoPagamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdDisciplina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdResponsavel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdAluno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProfessor)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
