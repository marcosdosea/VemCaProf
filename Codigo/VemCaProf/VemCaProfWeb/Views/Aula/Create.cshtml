@model VemCaProfWeb.Models.AulaModel


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cidade.css" />
}

<h1>Criar</h1>

<h4>Aula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for=" DataHorarioInicio" class="control-label"></label>
                <input asp-for=" DataHorarioInicio" class="form-control" />
                <span asp-validation-for=" DataHorarioInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataHorarioFinal" class="control-label"></label>
                <input asp-for="DataHorarioFinal" class="form-control" />
                <span asp-validation-for="DataHorarioFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="MetodoPagamento" class="control-label"></label>
                <input asp-for="MetodoPagamento" class="form-control" />
                <span asp-validation-for="MetodoPagamento" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDisciplina" class="control-label"></label>
                <input asp-for="IdDisciplina" class="form-control" />
                <span asp-validation-for="IdDisciplina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdResponsavel" class="control-label"></label>
                <input asp-for="IdResponsavel" class="form-control"/>
                <span asp-validation-for="IdResponsavel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAluno" class="control-label"></label>
                <input asp-for="IdAluno" class="form-control" />
                <span asp-validation-for="IdAluno" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdProfessor" class="control-label"></label>
                <input asp-for="IdProfessor" class="form-control" />
                <span asp-validation-for="IdProfessor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

